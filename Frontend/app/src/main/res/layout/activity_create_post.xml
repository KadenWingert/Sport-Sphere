<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        tools:ignore="ExtraText">


        <!-- Sport name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sport Name"
            android:id="@+id/sportNameText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/sportNameSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            />

        <!-- Max Players Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Players"
            android:id="@+id/maxplayerstext"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp"
            />

        <!-- Max Players  -->
        <EditText
            android:id="@+id/maxPlayersInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:inputType="number"
             />


        <!-- Min Players Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Players"
            android:id="@+id/minPlayersText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp"
        />

        <!-- Min Players Text -->
        <EditText
            android:id="@+id/minPlayersInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edittext_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:inputType="number"/>

        <!-- Address Text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:id="@+id/addressText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp" />

        <AutoCompleteTextView
            android:id="@+id/addressInput"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/confirmPasswordLabel"
            android:background="@drawable/rounded_edittext_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:hint="Address"
            android:scrollHorizontally="true"
            android:inputType="textPostalAddress"/>

        <!-- Date Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/dateText"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="10dp"
            android:inputType="date"/>

        <!-- Date Input -->
        <EditText
            android:id="@+id/dateInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="MM/DD/YYYY"
            android:background="@drawable/rounded_edittext_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:inputType="date"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="15dp"
            android:text="Submit" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:text="Cancel" />





    </LinearLayout>

</ScrollView>
