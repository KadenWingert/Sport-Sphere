<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/sportsTitle"
        android:layout_width="138dp"
        android:layout_height="19dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="Sports"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/basketballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basketball"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/sportsTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <CheckBox
        android:id="@+id/pickelballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickelball"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/basketballCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/footballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/pickelballCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/spikeballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spikeball"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/footballCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/tennisCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tennis"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/spikeballCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/volleyballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volleyball"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/tennisCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/softballCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Softball"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@id/volleyballCheck"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/hockeyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hockey"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintTop_toBottomOf="@+id/softballCheck"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/savedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="136dp"
        android:text="Saved Posts"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/softballCheck" />

    <Button
        android:id="@+id/viewFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="148dp"
        android:layout_marginBottom="8dp"
        android:text="View"
        app:layout_constraintBottom_toTopOf="@id/clearFilter"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/clearFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="623dp"
        android:layout_marginRight="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>